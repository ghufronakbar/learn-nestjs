generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id       String  @id @default(cuid())
  name     String
  email    String  @unique
  password String
  avatar   String?

  messages  Message[]
  roomChats RoomChat[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model RoomChat {
  id String @id @default(cuid())

  users    User[]
  messages Message[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Message {
  id      String @id @default(cuid())
  content String @db.Text()

  type MessageType

  roomChatId String
  roomChat   RoomChat @relation(fields: [roomChatId], references: [id])

  userId String
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

enum MessageType {
  TEXT
  IMAGE
}

model Anime {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  cover     String?
  synopsis  String?  @db.Text
  genres    Genre[]
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

enum Genre {
  ACTION
  ADVENTURE
  COMEDY
  CRIME
  DEMON
  DRAMA
  ECCHI
  FANTASY
  GAME
  HENTAI
  HISTORICAL
  HORROR
  JUMP
  KIDS
  MAGIC
  MUSIC
  MYSTIC
  PSYCHO
  ROMANCE
  SCHOOL
  SCIENCE
  SLICE
  SPIRIT
  SPORT
  SUSPENSE
  SUPERNATURAL
  THRILLER
  VIOLENCE
  WEBTOON
}
